.round-summary.modal.hide.fade{ role: "dialog" }
  %h2.heading
    %span.win
      Victory! <strong>{{race.name}}</strong> have won
    %span.draw
      It’s a draw. You both lose
    %span.continue
      The battle continues...

  .summary
    %h3.round Summary of Round <span class="value">1</span>

    .forces
      .force.template
        .force{ class: "{{stance}} race-{{player.raceId}} color-{{player.color}}" }
          .stance {{stance}}
          %h4
            %span.race {{player.race.name}}
            %span.player {{player.name}}

          %p.overview
            Inflicted {{hits}} {{"hit".pluralize(hits)}} to the other side and
            took {{damage}} damage losing {{losses}} {{"unit".pluralize(losses)}}.

          %ul.units
            -# List of Units from template below

          .promotions

      -# Extracted and inserted into %ul.units above
      .unit.template
        %li.unit{ class: "{{id}}"}
          %span.image
          %span.name {{name}}
          %span.battle {{battle}}
          %span.rolls {{rolls}}
          %span.losses{ class: "{{zeroCss(losses)}}" }
            %span.value -{{losses}}
            {{name.pluralize(losses)}}

  .promotions-notice
    %p Promotions will be applied automatically when you <b>Continue</b>...

  .summary-actions
    %a.done.btn{href:'#done'}> Thanks, We’re Done
    %a.next-round.btn{href:'#next-round'}> Continue...
    %a.start-invasion-combat.btn.hidden{href:'#start-invasion-combat'}> Start Invasion Combat
