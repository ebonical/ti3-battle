%h3.name
  %span.template
    %span.race {{race.name}}
    %span.player {{name}}

.order-of-battle
  .units
    .unit.template
      = partial "battle_unit"

  .hits-from-opponent.zero
    %span.label Hits Received
    %span.value 0

  .damage-applied.zero
    %span.label Damage Applied
    %span.value 0

  .clear-damage.damage
    %a{href:'#clear-damage'} Clear Damage

%ul.actions
  %li.clear-units
    %a{href:'#clear-units'} Clear Units
  %li.adjust-battle-values
    %a{href:'#adjust-battle-values'} Battle Values
  %li.adjust-damage-values
    %a{href:'#adjust-damage-values'} Sustained Damage
